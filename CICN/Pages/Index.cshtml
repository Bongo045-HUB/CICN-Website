@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<!---Carousel--->
<div class="container m-0 p-0">
    <div id="slider" class="carousel slide " data-ride="carousel" data-interval="10000">
        <ol class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/files/img/slider-0.jpg" alt="img-0">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/files/img/slider-1.jpg" alt="img-1">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/files/img/slider-2.jpg" alt="img-2">
            </div>
        </div>
        <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
            <div class="carouselIcon">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </div>
        </a>
        <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
            <div class="carouselIcon">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </div>
        </a>
    </div>
</div>

<!---Top News--->
<div class="container" style="background-color: #e9e9e9">
    <div class="row py-4 align-items-center">
        <div class="col-sm-2 col-lg-2">
            <div class="newsH text-lg-right">
                <h1>News</h1>
            </div>
        </div>

        <div class="col-sm-10 col-lg-10">
            <div class="newsT">
                <div id="newsSlider" class="carousel slide" data-ride="carousel" data-interval="5000">

                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="newsTcon">
                                <div class="ml-5 mr-5 text-left">
                                    <h3>Admission going on for 2021.</h3>
                                    <p>Oct 10, 2021</p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="newsTcon">
                                <div class="ml-5 mr-5 text-left">
                                    <h3>College remain closed until 31 November</h3>
                                    <p>Oct 12, 2021</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#newsSlider" role="button" data-slide="prev">
                        <div class="newsIcon">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </div>
                    </a>
                    <a class="carousel-control-next" href="#newsSlider" role="button" data-slide="next">
                        <div class="newsIcon">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </div>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
